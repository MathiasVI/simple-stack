
@font-face {
    font-family: 'FuturaStd-Heavy';
    src: url('../fonts/FuturaStd/FuturaStd-Heavy.eot');
}

@font-face {
    font-family: 'FuturaStd-Heavy';
    src: url('../fonts/FuturaStd/FuturaStd-Heavy.woff') format('woff'),
    url('../fonts/FuturaStd/FuturaStd-Heavy.svg#FuturaStd-Heavy') format('svg');
}

@font-face {
    font-family: 'FuturaStd-Book';
    src: url('../fonts/FuturaStd/FuturaStd-Book.eot');
}

@font-face {
    font-family: 'FuturaStd-Book';
    src: url('../fonts/FuturaStd/FuturaStd-Book.woff') format('woff'),
    url('../fonts/FuturaStd/FuturaStd-Book.svg#FuturaStd-Book') format('svg');
}



font( $size=18px, $color=#333333 ){
	font-family: Helvetica, Arial, sans-serif;
	font-size: $size;
	color: $color;
}

font-light( $size=18px, $color=#333333 ){
	font-family: Helvetica, Arial, sans-serif;
	font-size: $size;
	color: $color;
	font-weight: 100;
}

font-bold( $size=18px, $color=#333333 ){
	font-family: Helvetica, Arial, sans-serif;
	font-weight: 800;
	font-font-style: bold;
	font-size: $size;
	color: $color;
}

