html,body {
  height: 100%;
}

body {
  margin: 0 auto;
  padding: 0 auto;
  font-family: Arial,Tahoma,sans-serif;
  background: $bkgdColor;
  
  -webkit-tap-highlight-color: rgba(0,0,0,0); 
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

  min-width: $site-sml-min-width;
  
  opacity: 0;
  transition: opacity 1s quad-ease-in;  

  &.loaded {
    opacity: 1;
  }
}



ul,li {
  list-style: none;
  position: relative;
  margin: 0px;
  padding: 0px;
  
  font-size: 0px;
  
}


.btn, a {
  cursor: pointer;
  border: none;
  // no underline.
  text-decoration: none;
}

.btn,
.button {
  width: auto;
  display: block;
  text-align: center;
  font-family: sans-serif;
  cursor: pointer;
  text-transform: uppercase;
  
  &:hover {
  
  }
}

.icon,
.img {
  background-repeat: no-repeat;
  background-position: 50%;
}

.wrapper {
  position: relative;
  margin: 0px auto;
  max-width: $site-max-height;
  padding: 0px $borderOnSides 0px;
  &.full-padding {
    padding: $borderOnSides;
  }
  &.no-padding {
    padding: 0px 0px;
  }
}

.container {
  margin: 0px;
  width: 100%;
  height: 100%;
  position: relative;
}

@media screen and (max-width: $breakpt-med) {
  .wrapper {
    margin: 0px;
    padding: 0px $borderOnSides-med 0px;
    &.full-padding {
      padding: $borderOnSides-med;
    }
    &.no-padding {
      padding: 0px 0px;
    }
  }  
}

@media screen and (max-width: $breakpt-sml) {
  .wrapper {
    margin: 0px;
    padding: 0px $borderOnSides-sml 0px;
    &.full-padding {
      padding: $borderOnSides-sml;
    }
    &.no-padding {
      padding: 0px 0px;
    }
  }  
}
